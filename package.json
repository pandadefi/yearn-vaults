{
    "name": "yearn-protocol",
    "devDependencies": {
        "@commitlint/cli": "^17.2.0",
        "@commitlint/config-conventional": "^17.2.0",
        "@matterlabs/hardhat-zksync-deploy": "^0.6.1",
        "@matterlabs/hardhat-zksync-solc": "^0.3.13",
        "@matterlabs/hardhat-zksync-vyper": "^0.1.7",
        "@nomiclabs/hardhat-vyper": "^3.0.2",
        "@openzeppelin/contracts": "4.7.1",
        "ethers": "^5.7.2",
        "hardhat": "^2.12.5",
        "husky": "^8.0.1",
        "prettier": "^2.7.1",
        "prettier-plugin-solidity": "^1.0.0-beta.24",
        "pretty-quick": "^3.1.3",
        "solhint": "^3.3.7",
        "solhint-plugin-prettier": "^0.0.5",
        "ts-node": "^10.9.1",
        "typescript": "^4.9.4",
        "zksync-web3": "^0.12.3"
    },
    "scripts": {
        "format": "prettier --write 'contracts/**/*.sol' --verbose",
        "format:check": "prettier --check '**/*.*(sol|json)'",
        "format:fix": "pretty-quick --pattern '**/*.*(sol|json)' --staged --verbose",
        "hint": "solhint \"contracts/**/*.sol\""
    },
    "husky": {
        "hooks": {
            "pre-commit": "yarn lint:fix",
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    }
}
